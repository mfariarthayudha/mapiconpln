<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta name="description" content="" />
		<meta name="author" content="" />
		<!-- <link rel="icon" href="../images/favicon.ico"> -->

		<title>Mitra Admin - MAPIconPLN</title>

		<!-- Vendors Style-->
		<link rel="stylesheet" href="/sunny-admin/css/vendors_css.css" />

		<!-- Style-->
		<link rel="stylesheet" href="/sunny-admin/css/style.css" />
		<link rel="stylesheet" href="/sunny-admin/css/skin_color.css" />

		<link rel="stylesheet" href="/toastr/toastr.min.css" />
	</head>

	<body class="hold-transition light-skin sidebar-mini theme-primary">
		<div class="wrapper">
			<header class="main-header">
				<nav class="navbar navbar-static-top pl-30">
					<!-- Sidebar toggle button-->
					<div>
						<ul class="nav">
							<li class="btn-group nav-item">
								<a href="#" class="waves-effect waves-light nav-link rounded svg-bt-icon" data-toggle="push-menu" role="button">
									<i class="nav-link-icon mdi mdi-menu"></i>
								</a>
							</li>
						</ul>
					</div>

					<div class="navbar-custom-menu r-side">
						<ul class="nav navbar-nav">
							<li class="dropdown user user-menu">
								<a href="#" class="waves-effect waves-light rounded dropdown-toggle p-0" data-toggle="dropdown" title="User">
									<img src="/images/default-profile-picture.png" />
								</a>
								<ul class="dropdown-menu animated flipInX">
									<li class="user-body">
										<a class="dropdown-item" href="<%= `${baseUrl}/api/api/authentication/logout` %>"><i class="ti-lock text-muted mr-2"></i> Logout</a>
									</li>
								</ul>
							</li>
						</ul>
					</div>
				</nav>
			</header>

			<aside class="main-sidebar">
				<!-- sidebar-->
				<section class="sidebar">
					<div class="user-profile">
						<div class="ulogo">
							<a href="dashboard.html">
								<!-- logo for regular state and mobile devices -->
								<div class="d-flex align-items-center justify-content-center">
									<!-- <img src="../images/logo-dark.png" alt=""> -->
									<h3><b>MAP</b>IconPLN</h3>
								</div>
							</a>
						</div>
					</div>

					<!-- sidebar menu-->
					<ul class="sidebar-menu" data-widget="tree">
						<li>
							<a href="<%= `${baseUrl}` %>">
								<i data-feather="pie-chart"></i>
								<span>Dashboard</span>
							</a>
						</li>

						<li class="header nav-small-cap">Main Menu</li>

						<li>
							<a href="<%= `${baseUrl}/ptl` %>">
								<i data-feather="briefcase"></i>
								<span>PTL</span>
							</a>
						</li>

						<li>
							<a href="<%= `${baseUrl}/ptl-manager` %>">
								<i data-feather="user-check"></i>
								<span>PTL Manager</span>
							</a>
						</li>

						<li>
							<a href="<%= `${baseUrl}/ptl-admin` %>">
								<i data-feather="user"></i>
								<span>PTL Admin</span>
							</a>
						</li>

						<li>
							<a href="<%= `${baseUrl}/mitra` %>">
								<i data-feather="shopping-bag"></i>
								<span>Mitra</span>
							</a>
						</li>

						<li class="active">
							<a href="<%= `${baseUrl}/mitra-admin` %>">
								<i data-feather="user"></i>
								<span>Mitra Admin</span>
							</a>
						</li>
					</ul>
				</section>
			</aside>

			<!-- Content Wrapper. Contains page content -->
			<div class="content-wrapper">
				<div class="container-full">
					<!-- Content Header (Page header) -->
					<div class="content-header">
						<div class="d-flex align-items-center">
							<div class="mr-auto">
								<h3 class="page-title">Mitra Admin</h3>
								<div class="d-inline-block align-items-center">
									<nav>
										<ol class="breadcrumb">
											<li class="breadcrumb-item">
												<a href="<%= baseUrl %>"><i class="mdi mdi-home-outline"></i></a>
											</li>
											<li class="breadcrumb-item active" aria-current="page">Mitra Admin</li>
										</ol>
									</nav>
								</div>
							</div>
						</div>
					</div>

					<!-- Main content -->
					<section class="content">
						<div class="row">
							<div class="col-12">
								<div class="box">
									<div class="box-header with-border">
										<h3 class="box-title">Tambah Mitra Admin</h3>
									</div>
									<!-- /.box-header -->
									<div class="box-body">
										<form method="post" action="/api/dashboard/add-mitra-admin">
											<div class="form-group row">
												<label class="col-form-label col-lg-2">Mitra</label>
												<div class="col-lg-4">
													<select class="form-control" name="mitraId" required>
														<% mitra.forEach(mitra => { %>
														<option value="<%= mitra.mitra_id %>"><%= mitra.mitra_name %></option>
														<% }) %>
													</select>
													<small class="text-danger"><%= flashMessages.mitraInputError?.[0] %></small>
												</div>
											</div>

											<div class="form-group row">
												<label class="col-form-label col-lg-2">Username</label>
												<div class="col-lg-4">
													<input type="text" name="username" class="form-control" value="<%= flashMessages.usernameInputValue?.[0] %>" placeholder="Masukkan Username" required />
													<small class="text-danger"><%= flashMessages.usernameInputError?.[0] %></small>
												</div>

												<label class="col-form-label col-lg-2">Password</label>
												<div class="col-lg-4">
													<input type="password" name="password" class="form-control" value="<%= flashMessages.passwordInputValue?.[0] %>" placeholder="Masukkan Password" required />
													<small class="text-danger"><%= flashMessages.passwordInputError?.[0] %></small>
												</div>
											</div>

											<div class="pull-right mt-4">
												<button type="submit" id="submit-button" class="btn btn-rounded btn-primary mb-5">Tambah</button>
											</div>
										</form>
									</div>
									<!-- /.box-body -->
								</div>
								<!-- /.box -->
							</div>

							<!-- /.col -->
						</div>

						<div class="row">
							<div class="col-12">
								<div class="box">
									<div class="box-header with-border">
										<h3 class="box-title">Daftar Mitra Admin</h3>
									</div>
									<!-- /.box-header -->
									<div class="box-body">
										<div class="table-responsive">
											<table id="example1" class="table table-bordered table-striped" style="width: 100%">
												<thead>
													<tr>
														<th>No</th>
														<th>Username</th>
														<th>Mitra</th>
													</tr>
												</thead>
												<tbody id="pa-table-body">
													<% mitraAdmin.forEach((mitraAdmin, index) => { %>
													<tr>
														<td><%= index + 1 %></td>
														<td><%= mitraAdmin.username %></td>
														<td><%= mitraAdmin.mitra_name %></td>
													</tr>
													<% }) %>
												</tbody>
											</table>
										</div>
									</div>
									<!-- /.box-body -->
								</div>
								<!-- /.box -->
							</div>

							<!-- /.col -->
						</div>

						<!-- /.row -->
					</section>
					<!-- /.content -->
				</div>
			</div>
			<!-- /.content-wrapper -->
		</div>
		<!-- ./wrapper -->

		<!-- Vendor JS -->
		<script src="/sunny-admin/js/vendors.min.js"></script>
		<script src="/sunny-admin/assets/icons/feather-icons/feather.min.js"></script>
		<script src="/sunny-admin/assets/vendor_components/datatable/datatables.min.js"></script>
		<script src="/sunny-admin/js/pages/data-table.js"></script>

		<!-- Sunny Admin App -->
		<script src="/sunny-admin/js/template.js"></script>
	</body>
</html>
