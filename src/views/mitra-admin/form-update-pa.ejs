
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <!-- <link rel="icon" href="../images/favicon.ico"> -->

    <title>Update PA - MAPIconPLN</title>

    <!-- Vendors Style-->
    <link rel="stylesheet" href="/sunny-admin/css/vendors_css.css" />

    <!-- Style-->
    <link rel="stylesheet" href="/sunny-admin/css/style.css" />
    <link rel="stylesheet" href="/sunny-admin/css/skin_color.css" />

    <style>
      /* CSS to style the edit button */
      .btn-edit {
        padding: 15px 5px; /* Adjust padding to change button size */
        margin: 5px 5px 5px 5px;
        height: 28px;
        width: 100%;
        font-size: 10px; /* Adjust font size */
        display: flex;
        justify-content: center;
        align-items: center;
      }

      .btn-td {
        width: 10%;
        vertical-align: middle;
        justify-content: center;
        align-items: center;
      }
    </style>
  </head>

  <body class="hold-transition light-skin sidebar-mini theme-primary">
    <div class="wrapper">
      <header class="main-header">
        <nav class="navbar navbar-static-top pl-30">
          <!-- Sidebar toggle button-->
          <div>
            <ul class="nav">
              <li class="btn-group nav-item">
                <a
                  href="#"
                  class="waves-effect waves-light nav-link rounded svg-bt-icon"
                  data-toggle="push-menu"
                  role="button"
                >
                  <i class="nav-link-icon mdi mdi-menu"></i>
                </a>
              </li>
            </ul>
          </div>

          <div class="navbar-custom-menu r-side">
            <ul class="nav navbar-nav">
              <li class="dropdown user user-menu">
                <a
                  href="#"
                  class="waves-effect waves-light rounded dropdown-toggle p-0"
                  data-toggle="dropdown"
                  title="User"
                >
                  <img src="/images/default-profile-picture.png" />
                </a>
                <ul class="dropdown-menu animated flipInX">
                  <li class="user-body">
                    <a class="dropdown-item" href="<%= `${baseUrl}/api/api/authentication/logout` %>"
                      ><i class="ti-lock text-muted mr-2"></i> Logout</a
                    >
                  </li>
                </ul>
              </li>
            </ul>
          </div>
        </nav>
      </header>

      <aside class="main-sidebar">
        <!-- sidebar-->
        <section class="sidebar">
          <div class="user-profile">
            <div class="ulogo">
              <a href="dashboard.html">
                <!-- logo for regular state and mobile devices -->
                <div class="d-flex align-items-center justify-content-center">
                  <!-- <img src="../images/logo-dark.png" alt=""> -->
                  <h3><b>MAP</b>IconPLN</h3>
                </div>
              </a>
            </div>
          </div>

          <!-- sidebar menu-->
            <ul class="sidebar-menu" data-widget="tree">
                <li>
                    <a href="<%= `${baseUrl}` %>">
                        <i data-feather="pie-chart"></i>
                        <span>Dashboard</span>
                    </a>
                </li>

                <li class="header nav-small-cap">Main Menu</li>

                <li class="active">
                    <a href="<%= `${baseUrl}/update-pa` %>">
                        <i data-feather="edit"></i>
                        <span>Update PA</span>
                    </a>
                </li>

                <li>
                    <a href="<%= `${baseUrl}/monitoring-pa` %>">
                        <i data-feather="database"></i>
                        <span>Monitoring PA</span>
                    </a>
                </li>
            </ul>
        </section>
      </aside>

      <!-- Content Wrapper. Contains page content -->
      <div class="content-wrapper">
        <div class="container-full">
          <!-- Content Header (Page header) -->
          <div class="content-header">
            <div class="d-flex align-items-center">
              <div class="mr-auto">
                <h3 class="page-title">MAPIconPLN</h3>
                <div class="d-inline-block align-items-center">
                  <nav>
                    <ol class="breadcrumb">
                      <li class="breadcrumb-item">
                        <a href="dashboard.html"><i class="mdi mdi-home-outline"></i></a>
                      </li>
                      <li class="breadcrumb-item">
                     
                        <a href="<%= `${baseUrl}/update-pa` %>">Update PA</a>

                      </li>
                      <li class="breadcrumb-item active" aria-current="page">
                        <%= pa.id_pa %>
                      </li> 
                    </ol>
                  </nav>
                </div>
              </div>
            </div>
          </div>

          <!-- Main content -->
          <div class="box-header">
            <h4 class="box-title">Edit PA</h4>
          </div>
          <div class="box-body">
            <form method="post" action="/api/dashboard/update-pa/<%= pa.id_pa %>" enctype="multipart/form-data">
              <div class="form-group row">
                <label class="col-form-label col-lg-3">ID PA</label>
                <div class="col-lg-9">
                  <input type="text" class="form-control" value="<%= pa.id_pa %>" placeholder="ID PA" disabled />
                </div>
              </div>

              <div class="form-group row">
                <label class="col-form-label col-lg-3">Customer</label>
                <div class="col-lg-9">
                  <input type="text" name="customer" class="form-control" value="<%= pa.customer %>" placeholder="Customer" />
                </div>
              </div>


              <div class="form-group row">
                <label class="col-form-label col-lg-3">Foto Briefing K3</label>
                <div class="col-lg-9">
                  <% if (pa.foto_briefing_k3 == null) { %>
                  <div class="custom-file">
                    <input type="file" name="fotoBriefingK3" class="custom-file-input">
                    <label class="custom-file-label" for="customFile">Upload Foto</label>
                  </div>
                  <% } else { %>
                  <a href="<%= `${baseUrl}/uploaded-files/${pa.foto_briefing_k3}` %>" class="btn btn-primary mb-5">Lihat</a>
                  <a href="<%= `${baseUrl}/api/dashboard/update-pa/${pa.id_pa}/delete-foto-briefing-k3` %>" class="btn btn-danger mb-5">Hapus</a>
                  <% } %>
                </div>
              </div>  

              <div class="form-group row">
                <label class="col-form-label col-lg-3">Panjang Tarikan (M)</label>
                <div class="col-lg-9">
                  <input type="number" name="panjangTarikan" class="form-control" value="<%= pa.panjang_tarikan %>" placeholder="Panjang Tarikan (M)" />
                </div>
              </div>

              <div class="form-group row">
                <label class="col-form-label col-lg-3">Progres Tarikan (M)</label>
                <div class="col-lg-9">
                  <input type="number" name="progresTarikan" class="form-control" value="<%= pa.progres_tarikan %>" placeholder="Progres Tarikan (M)" />
                </div>
              </div>

              <div class="form-group row">
                <label class="col-form-label col-lg-3">Jumlah JB</label>
                <div class="col-lg-9">
                  <input type="number" name="jumlahJb" class="form-control" value="<%= pa.jumlah_jb %>" placeholder="Jumlah JB" />
                </div>
              </div>

              <div class="form-group row">
                  <label class="col-form-label col-lg-3">Tracing Core</label>
                  <div class="col-lg-9">
                    <select name="tracingCore" class="form-control">
                      <option value="0" <%= pa.tracing_core == 0 ? "selected" : "" %>>0%</option>
                      <option value="50" <%= pa.tracing_core == 50 ? "selected" : "" %>>50%</option>
                      <option value="100" <%= pa.tracing_core == 100 ? "selected" : "" %>>100%</option>
                    </select>
                  </div>
                </div>

              <div class="form-group row">
                <label class="col-form-label col-lg-3">Testcom</label>
                <div class="col-lg-9">
                  <select name="testcom" class="form-control">
                    <option value="0" <%= pa.testcom == 0 ? "selected" : "" %>>0%</option>
                    <option value="50" <%= pa.testcom == 50 ? "selected" : "" %>>50%</option>
                    <option value="100" <%= pa.testcom == 100 ? "selected" : "" %>>100%</option>
                  </select>
                </div>
              </div>

              <div class="form-group row">              
                <label class="col-form-label col-lg-3">Upload Tescom</label>
                <div class="col-lg-9">
                  <% if (pa.file_testcom == null) { %>
                  <div class="custom-file">
                    <input type="file" name="fileTestcom" class="custom-file-input">
                    <label class="custom-file-label" for="customFile">Upload Testcom</label>
                  </div>
                  <% } else { %>
                  <a href="<%= `${baseUrl}/uploaded-files/${pa.file_testcom}` %>" class="btn btn-primary mb-5">Lihat</a>
                  <a href="<%= `${baseUrl}/api/dashboard/update-pa/${pa.id_pa}/delete-file-testcom` %>" class="btn btn-danger mb-5">Hapus</a>
                  <% } %>
                </div>
              </div>  

              <div class="form-group row">
                <label class="col-form-label col-lg-3">BAI User</label>
                <div class="col-lg-9">
                  <select name="baiUser" class="form-control">
                      <option value="0" <%= pa.baiUser == 0 ? "selected" : "" %>>0%</option>
                      <option value="50" <%= pa.baiUser == 50 ? "selected" : "" %>>50%</option>
                      <option value="100" <%= pa.baiUser == 100 ? "selected" : "" %>>100%</option>
                  </select>
                </div>
              </div>

              <div class="form-group row">
                <label class="col-form-label col-lg-3">Upload BAI BAKL</label>
                <div class="col-lg-9">
                  <% if (pa.file_bai_bakl == null) { %>
                  <div class="custom-file">
                    <input type="file" name="fileBaiBakl" class="custom-file-input">
                    <label class="custom-file-label" for="customFile">Upload BAI</label>
                  </div>
                  <% } else { %>
                    <a href="<%= `${baseUrl}/uploaded-files/${pa.file_bai_bakl}` %>" class="btn btn-primary mb-5">Lihat</a>
                    <a href="<%= `${baseUrl}/api/dashboard/update-pa/${pa.id_pa}/delete-file-bai-bakl` %>" class="btn btn-danger mb-5">Hapus</a>
                    <% } %>
                </div>
              </div>  

              <div class="form-group row">
                <label class="col-form-label col-lg-3">Tanggal BAI</label>
                <div class="col-lg-9">
                  <input type="date" name="tanggalBai" class="form-control" <% if (pa.tanggal_bai != null) { %> value="<%= `${new Date(pa.tanggal_bai).getFullYear()}-${new Date(pa.tanggal_bai).getMonth() + 1}-${new Date(pa.tanggal_bai).getDate()}` %>" <% } %> />

                </div>
              </div>

              <div class="form-group row">
                <label class="col-form-label col-lg-3">Kendala</label>
                <div class="col-lg-9">
                  <textarea name="kendala" rows="5" cols="5" class="form-control" placeholder="Kendala"><%= pa.kendala %></textarea>
                </div>
              </div>

              <div class="clearfix pull-right">
                <button type="submit" class="btn btn-rounded btn-primary mb-5">Update</button>
              </div>
            </form>
            </div>
          

          <!-- /.content -->
        </div>
      </div>
      <!-- /.content-wrapper -->
    </div>
    <!-- ./wrapper -->

    <!-- Vendor JS -->
    <script src="/sunny-admin/js/vendors.min.js"></script>
    <script src="/sunny-admin/assets/icons/feather-icons/feather.min.js"></script>
    <script src="/sunny-admin/assets/vendor_components/datatable/datatables.min.js"></script>
    <script src="/sunny-admin/js/pages/data-table.js"></script>
    <script src="/sunny-admin/js/pages/advanced-form-element.js"></script>

    <!-- Sunny Admin App -->
    <script src="/sunny-admin/js/template.js"></script>
  </body>
</html>
